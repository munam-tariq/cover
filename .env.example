# Supabase - Get these from your Supabase project settings
# Project URL: Settings > API > Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
# Anon Key: Settings > API > anon public key
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
# Service Key: Settings > API > service_role key (KEEP SECRET!)
SUPABASE_SERVICE_KEY=eyJ...
# Project ID (from project URL)
SUPABASE_PROJECT_ID=your-project-id

# OpenAI
OPENAI_API_KEY=sk-...

# API Server
API_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001

# Widget
CDN_URL=http://localhost:3002

# Security
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_MESSAGES_PER_HOUR=50

# Deepgram - Voice Chat (STT + TTS)
# Get API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key

# Voice Feature Flags
VOICE_CHAT_ENABLED=true
VOICE_CHAT_MAX_DURATION_SECONDS=300

# Environment
NODE_ENV=development
