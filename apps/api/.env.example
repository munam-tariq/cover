# Server Configuration
PORT=3001

# CORS - Frontend URL (for allowing requests)
CORS_ORIGIN=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Encryption Key for API Endpoint Credentials
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-hex-string-here

# Email Configuration (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM_ADDRESS=hello@supportbase.app

# Cron Job Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET=your-cron-secret-here

# Firecrawl API (for URL scraping)
FIRECRAWL_API_KEY=fc-xxxxxxxxxxxxxxxxxxxx

# Crawl limits
MAX_CRAWL_PAGES=10

# Vapi Voice AI
VAPI_PUBLIC_KEY=your-vapi-public-key
VAPI_PRIVATE_KEY=your-vapi-private-key
VAPI_ASSISTANT_ID=your-vapi-assistant-id
VAPI_WEBHOOK_SECRET=your-webhook-secret

# Vapi Voice Configuration (change these to test different providers/models)
VAPI_LLM_PROVIDER=google
VAPI_LLM_MODEL=gemini-2.5-flash
VAPI_LLM_TEMPERATURE=0.3
VAPI_LLM_MAX_TOKENS=200
VAPI_TTS_PROVIDER=deepgram
VAPI_TTS_VOICE_ID=apollo
VAPI_TTS_MODEL=aura-2
VAPI_STT_PROVIDER=deepgram
VAPI_STT_MODEL=nova-3
VAPI_STT_LANGUAGE=en
VAPI_MAX_DURATION_SECONDS=600
VAPI_BACKGROUND_SOUND=office
